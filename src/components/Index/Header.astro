---
import Background from "../Common/Background.astro";
---

<header
  class="sm:h-[99.9vh] w-full flex sm:items-center justify-center sm:gap-6 relative"
>


  <div
    class="lg:w-[900px] sm:w-[90%] w-[98%] px-[2%] sm:px-[5%] lg:px-0 pt-32 sm:h-[35vh] flex sm:justify-center sm:items-center flex-col"
  >
    <h1 class="text-6xl sm:text-8xl zilla-slab-regular">MiauDona</h1>
    <p class="text-xl sm:text-2xl zilla-slab-regular">
      Desarrollador mobile Full Stack
    </p>
  </div>
   <div class="w-6/12 flex justify-center items-center flex-col">
            <div class="w-6/12">
                  <img src="img/logoPag.png" class="w-[80%]" alt="MiauDona"/>
            </div>
      </div> 
</header>

<style>
  h1,
  p {
    background: linear-gradient(
      to right,
      rgba(220, 173, 243, 1),
      rgba(197, 132, 228, 1),
      rgba(203, 118, 243, 1),
      rgba(197, 132, 228, 1),
      rgba(203, 118, 243, 1),
      rgba(197, 132, 228, 1),
      rgba(220, 173, 243, 1)
    );
    background-clip: text;
    color: transparent;
    text-shadow: -1px -1px 0 rgba(255, 255, 255, 0.5);
  }
</style>
