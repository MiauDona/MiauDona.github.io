---
interface Props {
    texto: string;
}
const { texto } = Astro.props;
---

<footer class="w-full py-12">

    <div class="lg:w-[700px] sm:w-[90%] w-[98%] mx-auto flex flex-col sm:flex-row justify-between items-center gap-6">
        <p class="zilla-slab-regular text-center sm:text-left">
            {texto}
        </p>
        <div class="flex gap-4">
        <a
            href="https://github.com/MiauDona"><img src="/img/github.svg" alt="GitHub" class="w-12 h-12" />
        </a>
    <div/>
</footer>