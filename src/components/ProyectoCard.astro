---
import Background from "./Background.astro";
interface Props {
    title: string;
    text: string;
    text2?: string;
    text3?: string;
    text4?: string;
    link?: string;
    img?: string;
    tec: string;
    tec2?: string;
    tec3?: string;
    tec4?: string;
    tec5?: string;


}
const title = Astro.props.title;
const text = Astro.props.text;
const text2 = Astro.props.text2;
const text3 = Astro.props.text3;
const text4 = Astro.props.text4;
const link = Astro.props.link;
const img = Astro.props.img;
const tec = Astro.props.tec;
const tec2 = Astro.props.tec2;
const tec3 = Astro.props.tec3;
const tec4 = Astro.props.tec4;
const tec5 = Astro.props.tec5;
---

<div class="card jaini pb-4">
    <Background tx="120%" position="relative" o=".4"/>

    <div class="title pb-2">
        <h3 class="text-4xl">{title}</h3>
    </div>
    <div class="grid grid-cols-12 gap-x-2">
        <div class="text col-span-12 sm:col-span-9 text-xl ">
            <p class="jaini ">{text}</p>
            {text2 && <p class="jaini">{text2}</p>}
            {text3 && <p class="jaini">{text3}</p>}
            {text4 && <p class="jaini">{text4}</p>}
            {link && <a class="p-1 pl-0 w-full" href={link}>
                    Ã‰chale un vistazo
            </a>}
        </div>
        <div class="col-span-12 sm:col-span-3 flex flex-row-reverse items-end justify-start">
            <div class="w-16 h-16">{tec && <img src={tec} alt="tec" class="w-full"/>}</div>
            <div class="w-16 h-16">{tec2 && <img src={tec2} alt="tec2" class="w-full "/>}</div>
            <div class="w-16 h-16">{tec3 && <img src={tec3} alt="tec3" class="w-full"/>}</div>
            <div class="w-16 h-16">{tec4 && <img src={tec4} alt="tec4" class="w-full"/>}</div>
            <div class="w-16 h-16">{tec5 && <img src={tec5} alt="tec5" class="w-full"/>}</div>







        </div>


    </div>


</div>


<style>
    .card {
        background: transparent;
        height: max-content;
        width: 100%;
        border-radius: 16px;
    }
</style>