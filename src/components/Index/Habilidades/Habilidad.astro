---
interface Props {
    img: string;
    title?: string;
}
const img = Astro.props.img;
const title = Astro.props.title;
---

<div class="w-32 h-32 p-8 mb-4 flex flex-col items-center justify-center mx-auto card rounded-lg bg-white/5 backdrop-blur-sm border border-white/10 hover:scale-105 transition-all duration-200 hover:bg-white/20">
    <img src={img} alt={title} class="w-full h-full object-contain"/>
    {title && <p class="text-center text-sm mt-2">{title}</p>}
</div>
