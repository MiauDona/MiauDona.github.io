      <div class="zilla-slab-regular gap-4 flex flex-col">
        {text && <p class=" ">{text}</p>}
        {text2 && <p class="">{text2}</p>}
        {text3 && <p class="">{text3}</p>}
        {text4 && <p class="">{text4}</p>}
      </div>
      <div class="text-xl mt-4">
        {
          link && (
            <a class="p-1 pl-0 w-full bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 rounded-xl px-4 py-2 flex justify-center items-center" href={link}>
