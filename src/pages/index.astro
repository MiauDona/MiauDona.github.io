---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Index/Header.astro";
import Nav from "../components/Common/Nav.astro";
import Footer from "../components/Common/Footer.astro";
import Background from "../components/Common/Background.astro";
import Proyectos from "../components/Index/Proyectos.astro";
import Habilidades from "../components/Index/Habilidades.astro";
---

<Layout title="wDona">
  <Nav />
  <Header />

  <main class="flex flex-col justify-center items-center">
    <div class="max-w-[900px] flex flex-col justify-center items-center gap-1">
      <!-- <Curriculum/> -->
      <!-- <GridCards/> -->
      <Proyectos />
      <Habilidades />
    </div>
  </main>
  <div class="hidden sm:block">
    <Background o=".4" tx="130vw" ty="150vh" x="-80vw" y="-60dvh" />
    <Background o=".2" tx="120vw" ty="140vh" x="55vw" y="50dvh" />
  </div>
  <div class="sm:hidden block">
    <Background o=".4" tx="95vw" ty="42vh" x="-45vw" y="0vh" />
    <Background o=".4" tx="20vw" ty="10vh" x="-30vw" y="90vh" />
    <Background o=".4" tx="30vw" ty="15vh" x="10vw" y="180vh" />
  </div>
  <Footer />
</Layout>
